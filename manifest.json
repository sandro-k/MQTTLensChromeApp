{
    "manifest_version": 2,
    "name": "MQTTLens",
    "version": "0.0.5",
    "minimum_chrome_version": "36",
    "icons": {
        "16": "assets/icon_16.png",
        "128": "assets/icon_128.png"
    },
    "app": {
        "background": {
            "scripts": ["main.js"]
        }
    },
    "sockets": {
        "udp": {
            "bind": "*",
            "send": "*"
        },
        "tcp": {
            "connect": "*"
        },
        "tcpServer": {
            "listen": "*"
        }
    },
    "permissions": [
      "storage",
      "*://*/*",
      "<all_urls>"]
}
